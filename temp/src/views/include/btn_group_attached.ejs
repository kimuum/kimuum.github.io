<% const btnItems = locals.btnItems || []; %>

<div class="btn_group btn_group_attached">
  <% btnItems.forEach((btn) => { %>
    <button
      type="button"
      class="btn <%= (btn.classList || '').trim() %><%= btn.active ? ' btn_active' : '' %>"
      aria-pressed="<%= btn.active ? 'true' : 'false' %>">
      <span class="btn_inner_text"><%= btn.text %></span>
    </button>
  <% }) %>
</div>