{
  "dir": {
    "src": "src/",
    "dist": "dist/"
  },
  "jsSetting": {
    "src": "src/js/**/*.js",
    "dist": "dist/js/",
    "srcApps": "src/js/apps/*.js",
    "minifyFileName": "project-name.min.js"
  },
  "fontsSetting": {
    "src": "src/font/**/*",
    "dist": "dist/font/"
  },
  "imgSetting": {
    "src": [
      "src/img/**/*.{png,jpg,jpeg,gif,svg,ico}",
      "!src/img/sprites/**/*",
      "!src/img/sprites-svg/**/*"
    ],
    "watchSrc": "src/img/**/*",
    "dist": "dist/img/",
    "svg": "src/img/svg/*.svg",
    "svg2": "src/img/sprites-svg/*.svg",
    "minOpts": {
      "optimizationLevel": 5
    }
  },
  "htmlSetting": {
    "src": "src/**/*.{html,ejs}",
    "dist": "dist/views",
    "except": "src/views/include/*.ejs"
  },
  "cssSetting": {
    "src": "src/css/scss/**/*.scss",
    "dist": "dist/css/",
    "libs": "src/css/libs/**/*",
    "sprites": "src/css/sprites-data/*.*",
    "sassOptsCp": {
      "outputStyle": "compressed",
      "errLogToConsole": false
    },
    "sassOptsEx": {
      "outputStyle": "expanded",
      "errLogToConsole": false
    }
  }
}